<!DOCTYPE html>
<html>
<head>
    <link href="https://fonts.googleapis.com/css?family=Libre+Barcode+128+Text|Libre+Barcode+39|Libre+Barcode+39+Extended|Libre+Barcode+39+Extended+Text" rel="stylesheet">
    <link rel="stylesheet" href="/slip-1.css">
</head>
<body>
{% for page in pages %}
    <div class="page">
        {% for item in page %}
            <div class="item">
                <div class="cut-line">
                    <span class="cut-mark">&nbsp;</span>
                    <span class="cut-mark">&nbsp;</span>
                </div>
                <div class="barcode">
                    <img src="data:image/png;base64,{{ item.barcodeData }}" />
                    <div>{{ item.barcodeText }}</div>
                </div>
                <div class="call_number">
                    {% for part in item.spineLabelCallNumber %}
                        <div>{{ part }}</div>
                    {% endfor %}
                </div>
                <div class="title">
                    {{ item.title }}
                </div>
                <div class="accession_number">
                    Box {{ item.accessionNumber }}
                </div>
            </div>
        {% endfor %}
    </div>
{% endfor %}
</body>
</html>